<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
    <div>
        <%# blog_post_path(blog_post.id) %>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <% if blog_post.draft? %>
         <div class="p-2 rounded bg-gray-100 text-black-100">Draft</div>
        <% elsif blog_post.scheduled? %>
         <div class="p-2 rounded bg-blue-100 text-black-100">Scheduled</div>
        <% end %>
        <p><%= blog_post.body %></p>
    </div>
<% end %>